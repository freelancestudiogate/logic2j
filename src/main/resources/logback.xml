<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%5relative %-5level [%thread] %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File appender without timestamp for non-regression comparisons
    -->
    <appender name="ONCE" class="ch.qos.logback.core.FileAppender">
        <file>once.log</file>
        <append>false</append>
        <encoder>
            <pattern>%-5level %msg%n</pattern>
        </encoder>
    </appender>
     
     
    <logger name="org.logic2j.core.solver.DefaultSolver" level="debug" />

    <root level="warn">
        <appender-ref ref="CONSOLE" />
        <!--  --> <appender-ref ref="ONCE"/>
    </root>

</configuration>
